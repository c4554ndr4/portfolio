---
const { title, description } = Astro.props;
const base = import.meta.env.BASE_URL;
const pageTitle = title ? `${title} | Cassandra Portfolio` : 'Cassandra Portfolio';
const pageDescription =
	description ??
		'Portfolio and writeups exploring experiments, tools, and prototypes.';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta name="description" content={pageDescription} />
		<style>
			@import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600&family=Space+Mono:wght@400;700&display=swap');

			:root {
				color-scheme: dark;
				--ink: #d6f7e4;
				--ink-soft: #92c5ae;
				--paper: #050a09;
				--glow: #0e1f18;
				--accent: #29ff8f;
				--accent-deep: #0fbf6b;
				--signal: #2fffa1;
				--metal: #8fb8a3;
				--wave: #47ffb5;
				--shadow: 0 22px 60px rgba(3, 10, 8, 0.55);
			}

			* {
				box-sizing: border-box;
			}

			body {
				margin: 0;
				min-height: 100vh;
				background: radial-gradient(circle at 15% 20%, rgba(41, 255, 143, 0.12), transparent 45%),
					radial-gradient(circle at 80% 15%, rgba(18, 255, 188, 0.08), transparent 50%),
					linear-gradient(180deg, #020605 0%, #060f0c 60%, #081410 100%);
				font-family: 'IBM Plex Mono', ui-monospace, SFMono-Regular, Menlo, monospace;
				color: var(--ink);
			}

			.page {
				position: relative;
				min-height: 100vh;
				padding: 48px 20px 80px;
				overflow: hidden;
			}

			.page::before,
			.page::after {
				content: '';
				position: absolute;
				width: 320px;
				height: 320px;
				border-radius: 999px;
				filter: blur(1px);
				opacity: 0.4;
				z-index: 0;
			}

			.page::before {
				background: radial-gradient(circle, rgba(41, 255, 143, 0.4) 0%, transparent 70%);
				top: -80px;
				right: -120px;
			}

			.page::after {
				background: radial-gradient(circle, rgba(47, 255, 161, 0.25) 0%, transparent 65%);
				bottom: -140px;
				left: -80px;
			}

			.container {
				position: relative;
				z-index: 1;
				max-width: 1100px;
				margin: 0 auto;
			}

			a {
				color: inherit;
				text-decoration: none;
			}

			.nav {
				display: flex;
				align-items: center;
				justify-content: space-between;
				gap: 16px;
				margin-bottom: 48px;
			}

			.nav__title {
				font-family: 'Space Mono', 'IBM Plex Mono', monospace;
				font-size: 1.2rem;
				letter-spacing: 0.2em;
				text-transform: uppercase;
			}

			.nav__links {
				display: flex;
				gap: 16px;
				flex-wrap: wrap;
				font-size: 0.95rem;
				color: var(--ink-soft);
			}

			.hero {
				display: grid;
				gap: 24px;
				grid-template-columns: minmax(0, 1fr);
				margin-bottom: 56px;
			}

			.hero__title {
				font-family: 'Space Mono', 'IBM Plex Mono', monospace;
				font-size: clamp(2.1rem, 4vw, 3.2rem);
				line-height: 1.1;
				margin: 0;
				text-transform: uppercase;
				letter-spacing: 0.08em;
				animation: floatIn 0.9s ease-out;
			}

			.hero__subtitle {
				font-size: 1.1rem;
				max-width: 640px;
				margin: 0;
				color: var(--ink-soft);
				animation: floatIn 0.9s ease-out 0.1s both;
			}

			.section {
				margin-bottom: 56px;
			}

			.section__title {
				font-size: 0.9rem;
				text-transform: uppercase;
				letter-spacing: 0.24em;
				color: var(--accent);
				margin-bottom: 16px;
			}

			.card-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
				gap: 18px;
			}

			.card {
				background: rgba(6, 18, 13, 0.85);
				border-radius: 14px;
				padding: 20px 22px;
				box-shadow: var(--shadow);
				border: 1px solid rgba(41, 255, 143, 0.12);
				backdrop-filter: blur(10px);
				position: relative;
				overflow: hidden;
				transition: transform 0.3s ease, box-shadow 0.3s ease;
				animation: fadeUp 0.8s ease-out var(--delay, 0s) both;
			}

			.card::after {
				content: '';
				position: absolute;
				inset: 0;
				background: repeating-linear-gradient(
					0deg,
					rgba(12, 32, 23, 0.3),
					rgba(12, 32, 23, 0.3) 1px,
					transparent 1px,
					transparent 4px
				);
				opacity: 0.3;
				pointer-events: none;
			}

			.card:hover {
				transform: translateY(-4px);
				box-shadow: 0 26px 65px rgba(3, 20, 12, 0.6);
			}

			.card__title {
				font-size: 1.05rem;
				font-weight: 600;
				margin: 0 0 6px;
				text-transform: uppercase;
				letter-spacing: 0.06em;
			}

			.card__meta {
				font-size: 0.9rem;
				color: var(--ink-soft);
				margin: 0;
			}

			.tag {
				display: inline-flex;
				align-items: center;
				gap: 6px;
				padding: 6px 10px;
				border-radius: 999px;
				font-size: 0.75rem;
				text-transform: uppercase;
				letter-spacing: 0.12em;
				margin-bottom: 10px;
				background: rgba(41, 255, 143, 0.12);
				color: var(--accent);
				border: 1px solid rgba(41, 255, 143, 0.25);
			}

			.tag--signal {
				background: rgba(47, 255, 161, 0.14);
				color: #2fffa1;
			}

			.tag--metal {
				background: rgba(143, 184, 163, 0.16);
				color: #c6e7d7;
			}

			.tag--wave {
				background: rgba(41, 255, 143, 0.18);
				color: #bfffe2;
			}

			.footer {
				margin-top: 64px;
				font-size: 0.85rem;
				color: var(--ink-soft);
			}

			@keyframes floatIn {
				from {
					opacity: 0;
					transform: translateY(16px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@keyframes fadeUp {
				from {
					opacity: 0;
					transform: translateY(18px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@media (min-width: 900px) {
				.hero {
					grid-template-columns: minmax(0, 1.1fr) minmax(0, 0.9fr);
					align-items: center;
				}
			}

			@media (max-width: 600px) {
				.nav {
					flex-direction: column;
					align-items: flex-start;
				}

				.page {
					padding: 36px 16px 64px;
				}
			}

			#dev-toolbar-root {
				display: none !important;
			}
		</style>
	</head>
	<body>
		<div class="page">
			<div class="container">
				<header class="nav">
					<div class="nav__title">Cassandra Portfolio</div>
					<nav class="nav__links">
						<a href={base}>Home</a>
						<a href="https://github.com/c4554ndr4">GitHub</a>
					</nav>
				</header>
				<slot />
				<footer class="footer"></footer>
			</div>
		</div>
	</body>
</html>
