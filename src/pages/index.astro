---
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;
const gameScript = import.meta.env.DEV ? '/src/game/entry.ts' : `${base}game/game.js`;
const writeups = await getCollection('writeups', ({ data }) => data.status === 'published');
const formatDate = (value?: string | Date) => {
	if (!value) return '';
	if (typeof value === 'string') return value;
	return new Intl.DateTimeFormat('en-US', {
		month: 'short',
		day: 'numeric',
		year: 'numeric',
	}).format(value);
};
const links = [
	{ title: 'GitHub', href: 'https://github.com/c4554ndr4' },
	{ title: 'Symbiont Alignment Thesis', href: 'https://future.forum' },
	{ title: 'X.com', href: 'https://x.com/calicomccoy' },
	{ title: 'Discord Symbiont', href: 'https://c4554ndr4.github.io/Discord_Symbiont/' },
];
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Cassandra Dungeon</title>
		<link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap"
		/>
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Silkscreen&display=swap"
		/>
		<style>
			:root {
				--void: #05020a;
				--ink: #e6c2ff;
				--glow: #2d113f;
			}

			* {
				box-sizing: border-box;
			}

			html,
			body {
				margin: 0;
				width: 100%;
				min-height: 100%;
				background: #000;
				font-family: 'Press Start 2P', monospace;
				color: var(--ink);
			}

			body.link-view-open {
				overflow: hidden;
				height: 100%;
			}

			#game-root {
				width: 100vw;
				height: 100vh;
				display: flex;
				align-items: center;
				justify-content: center;
				background: #000;
				touch-action: none;
			}

			canvas {
				width: 100%;
				height: 100%;
				image-rendering: pixelated;
				image-rendering: crisp-edges;
				touch-action: none;
			}

			.mobile-hint {
				position: fixed;
				top: max(12px, env(safe-area-inset-top));
				left: 50%;
				transform: translateX(-50%);
				z-index: 5;
				padding: 12px 18px 12px 16px;
				border-radius: 16px;
				background: rgba(10, 6, 18, 0.82);
				border: 1px solid rgba(230, 194, 255, 0.4);
				box-shadow: 0 10px 24px rgba(5, 2, 10, 0.35);
				font-size: 0.7rem;
				letter-spacing: 0.08em;
				text-transform: uppercase;
				opacity: 0.9;
				white-space: normal;
				display: flex;
				align-items: center;
				gap: 12px;
				flex-wrap: wrap;
				justify-content: center;
				max-width: calc(100vw - 24px);
				text-align: center;
			}

			.mobile-hint__text {
				display: inline-flex;
				align-items: center;
				gap: 8px;
			}

			.mobile-hint__close {
				border: none;
				background: rgba(230, 194, 255, 0.12);
				color: var(--ink);
				width: 26px;
				height: 26px;
				border-radius: 8px;
				display: inline-flex;
				align-items: center;
				justify-content: center;
				font-size: 0.75rem;
				cursor: pointer;
				padding: 0;
			}

			.mobile-hint__close:active {
				transform: scale(0.95);
			}

			@media (hover: hover) and (pointer: fine) {
				.mobile-hint {
					display: none;
				}
			}

			@media (hover: none) and (pointer: coarse) {
				body.link-view-open .link-view__button {
					display: none;
				}
			}

			:global(#dev-toolbar-root) {
				display: none !important;
			}

			:global(#shader-overlay) {
				position: fixed;
				inset: 0;
				pointer-events: none;
				mix-blend-mode: screen;
				opacity: 0.7;
				z-index: 2;
				background:
					radial-gradient(
						circle at var(--cursor-x, 50%) var(--cursor-y, 50%),
						rgba(210, 130, 255, 0.55),
						rgba(120, 50, 190, 0.15) 8%,
						transparent 16%
					),
					radial-gradient(
						circle at var(--cursor-x, 50%) var(--cursor-y, 50%),
						rgba(120, 60, 200, 0.18),
						transparent 10%
					);
				animation: shimmer 4s linear infinite;
			}

			:global(#shader-overlay .shader-glimmer) {
				position: fixed;
				left: var(--cursor-x, 50%);
				top: var(--cursor-y, 50%);
				width: 12px;
				height: 12px;
				border-radius: 999px;
				transform: translate(-50%, -50%);
				background: radial-gradient(circle, rgba(221, 164, 255, 0.95), transparent 70%);
				box-shadow: 0 0 18px rgba(168, 90, 255, 0.9);
				animation: glimmerPulse 1.8s ease-in-out infinite;
			}

			@keyframes glimmerPulse {
				0% {
					transform: translate(-50%, -50%) scale(0.85);
				}
				50% {
					transform: translate(-50%, -50%) scale(1.1);
				}
				100% {
					transform: translate(-50%, -50%) scale(0.85);
				}
			}

			@media (hover: none) and (pointer: coarse) {
				:global(#shader-overlay .shader-glimmer) {
					display: none;
				}
			}

			@keyframes shimmer {
				from {
					background-position: 0% 0%, 0% 0%;
				}
				to {
					background-position: 0% 0%, 200% 0%;
				}
			}

			:global(.sparkle) {
				position: fixed;
				left: 0;
				top: 0;
				width: 10px;
				height: 10px;
				border-radius: 999px;
				pointer-events: none;
				background: radial-gradient(circle, rgba(255, 255, 255, 0.98), rgba(195, 140, 255, 0.25));
				box-shadow: 0 0 18px rgba(200, 140, 255, 0.95), 0 0 6px rgba(255, 255, 255, 0.8);
				transform: translate(-50%, -50%);
				animation: sparkleFade 0.7s ease-out forwards;
				z-index: 3;
				mix-blend-mode: screen;
			}

			@keyframes sparkleFade {
				0% {
					opacity: 0.9;
					transform: translate(-50%, -50%) scale(1);
				}
				100% {
					opacity: 0;
					transform: translate(-50%, -90%) scale(0.4);
				}
			}

			.link-view {
				position: fixed;
				inset: 0;
				display: flex;
				align-items: flex-end;
				justify-content: center;
				padding: 24px 20px 28px;
				background: rgba(5, 2, 10, 0.7);
				opacity: 0;
				pointer-events: none;
				transform: translateY(18px);
				transition: opacity 0.25s ease, transform 0.25s ease;
				z-index: 4;
			}

			.link-view.is-open {
				opacity: 1;
				pointer-events: auto;
				transform: translateY(0);
			}

			.link-view__card {
				width: min(1120px, 98vw);
				max-height: min(88vh, 760px);
				overflow: auto;
				overscroll-behavior: contain;
				background: rgba(13, 6, 22, 0.9);
				border: 2px solid rgba(168, 90, 255, 0.55);
				box-shadow: 0 20px 50px rgba(5, 2, 10, 0.6);
				border-radius: 16px;
				padding: 40px;
				position: relative;
			}

			.link-view__close {
				position: sticky;
				top: 0;
				margin-left: auto;
				margin-bottom: 20px;
				border: none;
				background: rgba(230, 194, 255, 0.15);
				color: var(--ink);
				width: 34px;
				height: 34px;
				border-radius: 10px;
				display: inline-flex;
				align-items: center;
				justify-content: center;
				font-size: 1rem;
				cursor: pointer;
				padding: 0;
			}

			.link-view__close:active {
				transform: scale(0.96);
			}

			.link-view__profile {
				display: grid;
				grid-template-columns: auto 1fr;
				align-items: center;
				gap: 24px;
				margin-bottom: 28px;
			}

			.link-view__avatar {
				width: 96px;
				height: 96px;
				border-radius: 50%;
				object-fit: cover;
				border: 2px solid rgba(210, 140, 255, 0.75);
				box-shadow: 0 0 0 2px rgba(20, 10, 32, 0.9);
			}

			.link-view__profile-title {
				margin: 0 0 6px;
				font-size: 1.2rem;
				letter-spacing: 0.08em;
				text-transform: uppercase;
			}

			.link-view__profile-subtitle {
				margin: 0;
				font-size: 0.85rem;
				line-height: 1.6;
				color: rgba(230, 194, 255, 0.78);
				font-family: 'IBM Plex Mono', monospace;
			}

			.link-view__title {
				margin: 0 0 18px;
				font-size: 0.95rem;
				letter-spacing: 0.12em;
				text-transform: uppercase;
			}

			.link-view__section {
				margin-bottom: 24px;
			}

			.link-view__section-title {
				margin: 0 0 12px;
				font-size: 0.78rem;
				letter-spacing: 0.18em;
				text-transform: uppercase;
				color: rgba(230, 194, 255, 0.8);
			}

			.link-view__list {
				display: grid;
				gap: 12px;
			}

			.link-view__item {
				display: flex;
				flex-direction: column;
				gap: 4px;
				padding: 16px 18px;
				border-radius: 10px;
				border: 1px solid rgba(168, 90, 255, 0.4);
				background: rgba(9, 4, 16, 0.85);
				text-decoration: none;
				color: inherit;
				transition: transform 0.2s ease, border-color 0.2s ease;
			}

			.link-view__item:hover {
				transform: translateY(-2px);
				border-color: rgba(210, 140, 255, 0.75);
			}

			.link-view__name {
				font-size: 0.86rem;
				letter-spacing: 0.08em;
				text-transform: uppercase;
			}

			.link-view__meta {
				font-size: 0.7rem;
				letter-spacing: 0.08em;
				text-transform: uppercase;
				color: rgba(230, 194, 255, 0.65);
			}

			.link-view__desc {
				font-size: 0.72rem;
				line-height: 1.5;
				color: rgba(230, 194, 255, 0.75);
				font-family: 'IBM Plex Mono', monospace;
			}

			.link-view__button {
				position: fixed;
				right: 20px;
				bottom: 20px;
				z-index: 5;
				display: inline-flex;
				align-items: center;
				gap: 8px;
				padding: 18px 26px;
				border-radius: 8px;
				border: 2px solid rgba(168, 90, 255, 0.75);
				background: rgba(8, 3, 16, 0.9);
				color: #ead6ff;
				font-family: 'Press Start 2P', monospace;
				font-size: 0.85rem;
				text-transform: uppercase;
				letter-spacing: 0.08em;
				box-shadow: 0 0 0 2px rgba(14, 6, 24, 0.85);
				transform: none;
			}

			.link-view__button:hover {
				transform: translateY(-1px);
				box-shadow: 0 8px 18px rgba(88, 44, 140, 0.45);
			}

			@media (max-width: 720px) {
				.link-view {
					align-items: stretch;
					padding: 16px;
				}

				.link-view__card {
					max-height: 86vh;
					padding: 22px;
				}

				.link-view__button {
					bottom: 14px;
					right: 14px;
				}
			}
		</style>
	</head>
	<body>
		<div id="game-root" aria-label="Pixel dungeon"></div>
		<div class="mobile-hint" role="status" aria-live="polite">
			<span class="mobile-hint__text">Drag to move / Tap to shoot</span>
			<button class="mobile-hint__close" type="button" aria-label="Dismiss controls hint">
				×
			</button>
		</div>
		<section id="link-view" class="link-view" aria-label="Writeup links">
			<div class="link-view__card">
				<button class="link-view__close" type="button" aria-label="Close links">×</button>
				<div class="link-view__profile">
					<img
						class="link-view__avatar"
						src={`${base}assets/profile_pic.png`}
						alt="Cassandra McCoy (Melax)"
					/>
					<div>
						<h2 class="link-view__profile-title">Cassandra McCoy (Melax)</h2>
						<p class="link-view__profile-subtitle">
							Resesarcher, engineer, seeress, latent space cartographer
						</p>
					</div>
				</div>
				<div class="link-view__section">
					<h3 class="link-view__section-title">Writeups</h3>
					<div class="link-view__list">
						{writeups.map((entry) => (
							<a
								class="link-view__item"
								href={`${base}writeups/${entry.slug}/`}
							>
								<span class="link-view__name">{entry.data.title}</span>
								{entry.data.date ? (
									<span class="link-view__meta">{formatDate(entry.data.date)}</span>
								) : null}
								{entry.data.description ? (
									<span class="link-view__desc">{entry.data.description}</span>
								) : null}
							</a>
						))}
					</div>
				</div>
				<div class="link-view__section">
					<h3 class="link-view__section-title">Links</h3>
					<div class="link-view__list">
						{links.map((link) => (
							<a class="link-view__item" href={link.href}>
								<span class="link-view__name">{link.title}</span>
							</a>
						))}
					</div>
				</div>
			</div>
		</section>
		<button class="link-view__button" type="button">Link View</button>
		<script type="module" src={gameScript}></script>
		<script>
			const linkButton = document.querySelector('.link-view__button');
			const linkSection = document.getElementById('link-view');
			const linkClose = document.querySelector('.link-view__close');
			const openLinks = () => {
				linkSection?.classList.add('is-open');
				document.body.classList.add('link-view-open');
			};
			const closeLinks = () => {
				linkSection?.classList.remove('is-open');
				document.body.classList.remove('link-view-open');
			};
			linkButton?.addEventListener('click', openLinks);
			linkClose?.addEventListener('click', closeLinks);
			linkSection?.addEventListener('click', (event) => {
				if (event.target === linkSection) {
					closeLinks();
				}
			});

			const mobileHint = document.querySelector('.mobile-hint');
			const mobileHintClose = document.querySelector('.mobile-hint__close');
			mobileHintClose?.addEventListener('click', () => {
				mobileHint?.remove();
			});

			let lastSparkle = 0;
			const sparkleInterval = 24;
			window.addEventListener('mousemove', (event) => {
				const now = performance.now();
				if (now - lastSparkle < sparkleInterval) return;
				lastSparkle = now;
				const sparkle = document.createElement('span');
				sparkle.className = 'sparkle';
				sparkle.style.left = `${event.clientX}px`;
				sparkle.style.top = `${event.clientY}px`;
				document.body.appendChild(sparkle);
				sparkle.addEventListener('animationend', () => sparkle.remove());
			});
		</script>
	</body>
</html>
